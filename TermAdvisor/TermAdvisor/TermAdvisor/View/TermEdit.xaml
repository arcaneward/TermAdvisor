<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TermAdvisor.View.TermEdit">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#1D2545" Padding="15" CornerRadius="10" Margin="10">
                <Label Text="Edit Term" HorizontalTextAlignment="Center" TextColor="White" FontSize="25"/>
            </Frame>
            <StackLayout Padding="15">
                <Label Text="Name" FontSize="20"/>
                <Entry x:Name="nameEntry"/>
            </StackLayout>
            <StackLayout Padding="15">
                <Label Text="Start Date" FontSize="20"/>
                <DatePicker x:Name="startDate"/>
            </StackLayout>
            <StackLayout Padding="15">
                <Label Text="End Date" FontSize="20"/>
                <DatePicker x:Name="endDate"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Padding="10">
                <Button Text="Save" x:Name="SaveButton" Clicked="SaveButton_Clicked" CornerRadius="10" HorizontalOptions="FillAndExpand" />
                <Button Text="Cancel" x:Name="CancelButton" Clicked="CancelButton_Clicked" CornerRadius="10" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>